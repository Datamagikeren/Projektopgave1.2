@page
@model Projektopgave1._2.EditTemaModel
@{
}
<h3>Edit Tema</h3>

<p>ID @Model.Tema.Id</p>
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="@Model.Tema.Id" />
    <div class="form-group">
        <label asp-for="@Model.Tema.Name" class="control-label"></label>
        <input asp-for="@Model.Tema.Name" class="form-control" />
        <span asp-validation-for="@Model.Tema.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Tema.Description" class="control-label"></label>
        <input asp-for="@Model.Tema.Description" class="form-control" />
        <span asp-validation-for="@Model.Tema.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Tema.ImageName" class="control-label"></label>
        <input asp-for="@Model.Tema.ImageName" class="form-control" />
        <span asp-validation-for="@Model.Tema.ImageName" class="text-danger"></span>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="@Model.Tema.Kode" />

    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Rediger Tema
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Er du sikker på du vil redigere dette tema?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuller</button>
                    <button type="submit" value="Save" class="btn btn-primary">OK</button>
                </div>
            </div>
        </div>
    </div>
</form>
<div>
    <a href="javascript:history.back()" class="btn btn-secondary m-1">Tilbage</a>
</div>
