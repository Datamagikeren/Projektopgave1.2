@page
@model Projektopgave1._2.SeTemaModel
@{
}
<body>

    <div class="text-center">
        <h1 class="display-4">@Model.Tema.Name</h1>
        <img src="~/images/@Model.Tema.ImageName" width="500" height="250">
        <p>@Model.Tema.Description</p>

        <h1>Udstillinger</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        ImageName
                    </th>
                    <th>
                        Temakode
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Udstillinger)
                {
                    <tr>
                        <td class="overskrift">
                            @item.Id
                        </td>
                        <td class="overskrift">
                            @item.Name
                        </td>
                        <td class="overskrift">
                            @item.Description
                        </td>
                        <td class="overskrift">
                            @item.ImageName
                        </td>
                        <td class="overskrift">
                            @item.TemaKode
                        </td>
                        <td>
                            <a class="overskrift" asp-page="../Udstilling/EditUdstilling" asp-route-id="@item.Id">Rediger</a>|
                            <a class="overskrift" asp-page="../Udstilling/DeleteUdstilling" asp-route-id="@item.Id">Slet</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <a class="overskrift" asp-page="/Udstilling/AddUdstilling"
           class="btn btn-success btn-group-lg pull-right">
            Create Udstilling
        </a>
        <div>
            <a class="overskrift" asp-page="AllTema" class="btn btn-secondary m-1">Tilbage</a>
        </div>
    </div>
</body>