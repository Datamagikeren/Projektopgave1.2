@page
@model Projektopgave1._2.AddTemaModel
@{
}



<h2 class="crud-heading">Opret nyt tema</h2>
<form class="form-horizontal" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group" style="width:25%">
        <label asp-for="@Model.Tema.Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Tema.Name" type="text" class="form-control">
            <span asp-validation-for="@Model.Tema.Name" class="text-danger"></span>
        </div>
    </div>
    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Tema.Id" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Tema.Id" type="text" class="form-control">
            <span asp-validation-for="@Model.Tema.Id" class="text-danger"></span>
        </div>
    </div>
    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Tema.Description" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Tema.Description" type="text" class="form-control">
            <span asp-validation-for="@Model.Tema.Description" class="text-danger"></span>
        </div>
    </div>

    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Tema.ImageName" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Tema.ImageName" type="text" class="form-control">
            <span asp-validation-for="@Model.Tema.ImageName" class="text-danger"></span>
        </div>
    </div>
    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Tema.Kode" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Tema.Kode" type="text" class="form-control">
            <span asp-validation-for="@Model.Tema.Kode" class="text-danger"></span>
        </div>
    </div>

    <button type="button" class="btn btn-primary tilføj-tema-knap" data-toggle="modal" data-target="#exampleModal">
        Tilføj Tema
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Er du sikker på du vil oprette dette tema?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuller</button>
                    <button type="submit" class="btn btn-primary">OK</button>
                </div>
            </div>
        </div>
    </div>


    
</form>
<style>
    .tilføj-tema-knap {
        margin-left:15px;
    }

    .crud-heading {
        margin-left: 15px;
    }

</style>