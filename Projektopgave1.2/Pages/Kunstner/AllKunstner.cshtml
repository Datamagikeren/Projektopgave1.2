@page
@model Projektopgave1._2.AllKunstnerModel
@{
}
<h1> AllKunstner </h1>
<table class="table">
    <thead>
        <tr>
            <th>Name </th>
            <th>Id</th>
            <th>Description</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Kunstnere.Count != 0)
        {
        @foreach (var item in Model.Kunstnere)
        {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Id
            </td>
            <td>
                @item.Description
            </td>
            <td>
                <img src="~/images/@item.ImageName" width="140" height="70">
            </td>
            <td>
                <p>
                    <a asp-page="EditKunstner" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="DeleteKunstner" asp-route-id="@item.Id">Delete</a> |
                    <a asp-page="SeKunstner" asp-route-id="@item.Id"> Se Kunstner</a>  
                </p>
            </td>
        </tr>
        }}
    </tbody>
</table>
<a asp-page="AddKunstner"
   class="btn btn-success btn-group-lg pull-right">
    Create kunstner
</a>
