@page
@model Projektopgave1._2.BrugerKunstnerModel
@{
}
<h1> Læs om kunstnerne </h1>

    
<div class="containerBruger">
    <div class="row">
        @if (Model.Kunstnere.Count != 0)
        {
            @foreach (var item in Model.Kunstnere)
            {

                <div class="column-2 p-2">
                    <div class="card bg-dark text-white">


                        <a asp-page="SeKunstnerBruger" asp-route-id="@item.Id"> <img src="~/images/@item.ImageName" width="500" height="250" alt="Card image"></a>



                        <p class="centeredTitle"><strong>@item.Name</strong></p>


                    </div>
                </div>
            }
        }

    </div>
    <a href="javascript:history.back()" class="btn btn-secondary m-1">Tilbage</a>
</div>


