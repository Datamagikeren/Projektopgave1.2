@page
@model Projektopgave1._2.DeleteUdstillingModel
@{
}
<body>

    <div class="overskrift"><h1>Slet Udstilling</h1></div>

    <form method="post">
        <dl class="overskrift row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Udstilling.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Udstilling.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Udstilling.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Udstilling.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Udstilling.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Udstilling.Description)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Udstilling.ImageName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Udstilling.ImageName)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Udstilling.TemaKode)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Udstilling.TemaKode)
            </dd>
        </dl>
        <button type="button" class="overskrift btn btn-primary" data-toggle="modal" data-target="#exampleModal">
            Slet Udstilling
        </button>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Er du sikker på du vil slette denne udstilling?</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="overskrift btn btn-secondary" data-dismiss="modal">Annuller</button>
                        <button type="submit" value="Delete" class="overskrift btn btn-primary">OK</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div>
        <a href="javascript:history.back()" class="overskrift btn btn-secondary mt-1">Tilbage</a>
    </div>
</body>