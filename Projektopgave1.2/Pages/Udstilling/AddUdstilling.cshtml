            <div class="form-group">
                <label asp-for="@Model.Udstilling.Description" class="control-label"></label>
                <input asp-for="@Model.Udstilling.Description" class="form-control" />
                <span asp-validation-for="@Model.Udstilling.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Udstilling.Id" class="control-label"></label>
                <input asp-for="@Model.Udstilling.Id" class="form-control" />
                <span asp-validation-for="@Model.Udstilling.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Udstilling.Duration" class="control-label"></label>
                <input asp-for="@Model.Udstilling.Duration" class="form-control" />
                <span asp-validation-for="@Model.Udstilling.Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Udstilling.ImageName" class="control-label"></label>
                <input asp-for="@Model.Udstilling.ImageName" class="form-control" />
                <span asp-validation-for="@Model.Udstilling.ImageName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Udstilling.TemaKode" class="control-label"></label>
                <select asp-for="@Model.Udstilling.TemaKode" class="form-control"
                        asp-items="@Model.TemaKoder">
                    <option value="">-- Select Code --</option>
                </select>
                <span asp-validation-for="@Model.Udstilling.TemaKode" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
