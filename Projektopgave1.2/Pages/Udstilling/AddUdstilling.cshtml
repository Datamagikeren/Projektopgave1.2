<h1>CreateUdstilling</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="None " class="text-danger">
            </div>
            <div class="form-group">
                <label asp-for="@Model.Udstilling.Name" class="control-label"></label>
