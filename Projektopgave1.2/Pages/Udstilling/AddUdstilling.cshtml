@page
@model Projektopgave1._2.AddUdstillingModel
@{
}
<form class="form-horizontal" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group" style="width:25%">
        <label asp-for="@Model.Udstilling.Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Udstilling.Name" type="text" class="form-control">
            <span asp-validation-for="@Model.Udstilling.Name" class="text-danger"></span>
        </div>
    </div>
    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Udstilling.Id" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Udstilling.Id" type="text" class="form-control">
            <span asp-validation-for="@Model.Udstilling.Id" class="text-danger"></span>
        </div>
    </div>
    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Udstilling.Description" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Udstilling.Description" type="text" class="form-control">
            <span asp-validation-for="@Model.Udstilling.Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Udstilling.TemaKode" class="control-label"></label>
        <select asp-for="@Model.Udstilling.TemaKode" class="form-control"
                asp-items="@Model.TemaKoder">
            <option value="">-- Select Code --</option>
        </select>
        <span asp-validation-for="@Model.Udstilling.TemaKode" class="text-danger" />
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="border-light">
                Add Theme
            </button>
        </div>
    </div>


</form>
